{
  "manifest_version": 2,
  "name": "Figma Dark Theme",
  "description": "A dark theme for Figma.",
  "version": "1.0.2",
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.figma.com/*"
      ],
      "js": [
        "js/theme.js"
      ],
      "css": [
        "css/theme.dark.css"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "images/logo64.png",
    "48": "images/logo128.png",
    "128": "images/logo192.png"
  }
}