{
  "name": "Figma Dark Theme",
  "description": "A dark theme for Figma editor.",
  "version": "1.0.5",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.figma.com/*"
      ],
      "exclude_globs": [
        "https://*.figma.com"
      ],
      "js": [
        "js/theme.js"
      ],
      "css": [
        "css/theme.dark.css"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  }
}